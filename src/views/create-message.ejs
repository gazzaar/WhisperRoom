<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WhisperRoom - Creata message</title>
    <link rel="stylesheet" href="/css/errors.css" />
  </head>
  <body>

      <% if (locals.errors && errors.length > 0) { %>
      <div class="errors"><%- include("./errors.ejs") %></div>
      <% } %>

    <div class="container">
      <form action="/create-message" method="POST">
        <div class="form-group">
          <input type="text" name="title" id="title" placeholder="Enter message title:">
        </div>
        <div class="form-group">
          <textarea rows="10" cols="40"  name="message_text" id="message_text" placeholder="Enter text here"></textarea>
        </div>
        <button type="submit">Create Message</button>
      </form>

      <a href="/messages">Go to messages</a>
    </div>
  </body>
</html>
